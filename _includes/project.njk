---
layout: page.njk
---
<div class="project-main">
  <h2>{{ title }}</h2>

  <ul id="proj-details">
    <li>{{ launch }}</li>
    {% if purl %}
    <li><a href="//{{ purl }}">{{ purl }}</a></li>
    {% endif %}
    <li>{{ tech }}</li>
  </ul>

  <div id="proj-desc">
    {{ content | safe }}
  </div>

  <div id="proj-imgs">
    {% for item in shots %}
    <img src="{{ site.imgloc }}/{{ pid }}/{{ item.img }}"
      alt="{{ item.alt }}"
      srcset="{{ site.imgloc }}/w_480/{{ pid }}/{{ item.img }} 480w,
              {{ site.imgloc }}/w_640/{{ pid }}/{{ item.img }} 640w,
              {{ site.imgloc }}/{{ pid }}/{{ item.img }} 800w"
      sizes="(max-width: 480px) 100vw, (max-width: 960px) 640px, 800px">
    {% endfor %}

    {% for mo in mobiles %}
      <img src="{{ site.imgloc }}/{{ pid }}/{{ mo.img }}" alt="{{ mo.alt }}">
    {% endfor %}
  </div>
</div>

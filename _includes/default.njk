<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ title }} + {{ site.title }}</title>
  <link href="https://fonts.googleapis.com/css?family=Merriweather+Sans:400,800|Merriweather:400,900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/projects.css">
</head>

<body>
<div class="wrapper">
<section class="intro">
  <header>
    <h1>{{ site.title }}</h1>
    <h2>{{ title }}</h2>
  </header>

  {{ content | safe }}

  {% include "projectnav.njk" %}
</section>

<section class="screens">
  {% for project in collections.projects | reverse %}
    <div class="thumb"><a href="/projects/{{ project.data.pid }}"><img src="/thumbs/{{ project.data.pid }}.jpg"><h3>{{ project.data.title }}</h3></a></div>
  {% endfor %}
</section>
</div>
</body>
</html>
